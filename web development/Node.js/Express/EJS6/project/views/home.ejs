<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= Content %></p>
<% posts.forEach(function(post) { %>
<h1><%= post['title']; %></h1>
<% var info = post['article']; %>
<% if(post['article'].length > 100) { %>
    <% var info = post['article'].substring(0,100) + "..."; %>
    <% } %>
<p>
    <%= info; %>
    <% var post_to = "/posts/" + post['title']; %>
    <a href=<%= post_to %>>Read More </a>  
</p>
<% }) %>
<%- include("partials/footer"); -%>